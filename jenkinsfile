pipeline {

    agent any
    stages {

        stage('Build') {
            steps {
                sh '''
		        whoami
			chmod -R +x *
			./jenkins/build/mvn.sh -B -DskipTests clean package
                        ./jenkins/build/build.sh 
                    '''   
            }
	    post {
                success {
                    archiveArtifacts artifacts: 'java-app/target/*.jar', fingerprint: true
                }
            }
        }                        
        stage('Test') {
            steps {
		sh './jenkins/test/test.sh test' 
            }
	     post {
                always {
                    junit 'java-app/target/surefire-reports/*.xml'
                }
	    }
        }
        stage('Push') {
            steps {
		script {
                    docker.withRegistry('https://registry.hub.docker.com/aarobarra', 'dockerhub') {
		    	docker.image("app:"+env.BUILD_ID).push()
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                sh './jenkins/deploy/deploy.sh'
            }
        }
    }
}

